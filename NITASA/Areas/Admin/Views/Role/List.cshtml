@model  List<Tuple<Role, int>>
@using NITASA.Data
@using NITASA.Areas.Admin.Helper
@{
    ViewBag.Title = "Role List";

    WebGrid grid = new WebGrid(Model, canSort: true);
}
@section PageLevelStyles
{
            <style>
                tfoot td {
                    line-height: 3 !important;
                }

                .custom-pagination td {
                    padding-left: 10px !important;
                }

                .table-normal tbody td.col1 {
                    width: 100px;
                    text-align: center;
                }

                .table-normal tbody td.col2 {
                    width: 150px;
                    text-align: center;
                }

                .table-normal tbody td.col3 {
                    width: 115px;
                    text-align: center;
                }
            </style>
        }

        <div class="main-content">
            <div class="container-fluid padded">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        <button class="close" data-dismiss="alert" type="button">
                            ×
                        </button>
                        @TempData["SuccessMessage"]
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-error">
                        <button class="close" data-dismiss="alert" type="button">
                            ×
                        </button>
                        @TempData["ErrorMessage"]
                    </div>
                }
                <div class="row-fluid">
                    <div class="span12">
                        @using (Html.BeginForm("List", "Role", FormMethod.Get))
                        {
                            <div class="box">
                                <div class="box-header">
                                    <span class="title">Search Role</span>
                                    @if (UserRights.HasRights(Rights.CreateNewRoles))
                                    {
                                        <ul class="box-toolbar">
                                            <li>
                                                <a href="@Url.Action("Add")" title="Add Role">
                                                    <i class="icon-plus-sign" style="margin-top: 10px">
                                                    </i>
                                                </a>
                                            </li>
                                        </ul>
                                    }
                                </div>
                                <div class="box-content">
                                    <div class="padded">
                                        <table class="form-horizontal fill-up validatable width100per">
                                            <tr>
                                                <td class="width10per">
                                                    Role Name
                                                </td>
                                                <td class="width70per">
                                                    <input type="text" id="txtSearchRole" name="roleName" class="width100per" placeholder="Role Name" />
                                                </td>
                                                <td class="width20per">
                                                    <input type="submit" class="btn btn-blue" value="Search" />
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="box">
                            <div class="box-header">
                                <span class="title">Browse Roles</span>
                            </div>
                            <div class="box-content">
                                @if (Model.Count() > 0)
                                {
                                    @grid.GetHtml(tableStyle: "table table-normal", headerStyle: "head", alternatingRowStyle: "alt",
                                firstText: "First", nextText: "Next", previousText: "Prev", lastText: "Last", footerStyle: "custom-pagination",
                                mode: WebGridPagerModes.All, columns: grid.Columns(
                                        grid.Column(columnName: "item1.Name", header: "Role Name", style: "col0"),
                                        grid.Column(columnName: "item2", header: "No. of Users", style: "col1"),
                                        grid.Column(columnName: "item1.AddedOn", header: "Added On", style: "col2"),
                                        grid.Column(header: "Action", style: "col3", format: @<text>
                                            @if (item.item1.Name != "Administrator")
                                            {
                                                if (Functions.CurrentUserID() == item.item1.AddedBy)
                                                {
                                                    if (UserRights.HasRights(Rights.EditOwnRoles))
                                                    {
                                                        @Html.ActionLink("Edit", "Edit", new { GUID = item.item1.GUID }, new { @class = "btn btn-small btn-blue" })
                                                    }
                                                }
                                                else
                                                {
                                                    if (UserRights.HasRights(Rights.EditOtherUsersRoles))
                                                    {
                                                        @Html.ActionLink("Edit", "Edit", new { GUID = item.item1.GUID }, new { @class = "btn btn-small btn-blue" })
                                                    }
                                                }
                                                if (UserRights.HasRights(Rights.DeleteRoles))
                                                {
                                                    @Html.ActionLink("Delete", "Delete", new { GUID = item.item1.GUID }, new { @class = "btn btn-small btn-red", onclick = "return confirm('Are you sure to delete this Role ?');" })
                                                }
                                            }</text>
                                                                                  )
                                                                          )
                                                                      )
                                }
                                else
                                {
                                    <div class="padded">
                                        No Role Found.
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
