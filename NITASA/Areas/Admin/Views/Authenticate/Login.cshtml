@model NITASA.Areas.Admin.ViewModels.Login
@{
    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <title>Login - NITASA CMS</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,800">
    <link href="@Url.Content("~/Areas/Admin/assets/css/application.css")" media="screen" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Areas/Admin/assets/js/application.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/Admin/assets/js/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Areas/Admin/assets/js/jquery.validate.unobtrusive.min.js")"></script>
    <link rel="icon" type="image/png" href="~/Areas/Admin/assets/images/favicon.ico" />
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="navbar navbar-top navbar-inverse">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <div>
                        <a class="brand" href="#">
                            <img src="@Url.Content("~/Areas/Admin/assets/images/logo.png")" alt="logo" style="padding-top: 7px;" />
                        </a>
                    </div>
                    <!-- the new toggle buttons -->
                    <ul class="nav pull-right">
                        <li class="toggle-primary-sidebar hidden-desktop" data-toggle="collapse" data-target=".nav-collapse-primary"><a><i class="icon-th-list"></i></a></li>
                        <li class="collapsed hidden-desktop" data-toggle="collapse" data-target=".nav-collapse-top"><a><i class="icon-align-justify"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="span4 offset4">
                <div class="padded">
                    <div class="login box" style="margin-top: 80px;">
                        <div class="box-header">
                            <span class="title">Login</span>
                        </div>
                        <div class="box-content padded">
                            @if (TempData["Login_ErrorMsg"] != null)
                            {
                                <div class="alert alert-error">
                                    <button class="close" data-dismiss="alert" type="button">×</button>
                                    @TempData["Login_ErrorMsg"]
                                </div>
                            }
                            @if (TempData["loginmessage"] != null)
                            {
                                <div class="alert alert-success">
                                    <button class="close" data-dismiss="alert" type="button">×</button>
                                    @TempData["loginmessage"]
                                </div>
                            }
                            <div class="input-prepend">
                                <span class="add-on">
                                    <i class="icon-user"></i>
                                </span>
                                @Html.TextBoxFor(m => m.EmailAddress, new { Placeholder = "Email ID" })
                            </div>
                            <div style="color: red">
                                @Html.ValidationMessageFor(m => m.EmailAddress)
                            </div>
                            <br />
                            <div class="input-prepend">
                                <span class="add-on">
                                    <i class="icon-key"></i>
                                </span>
                                @Html.PasswordFor(m => m.Password, new { Placeholder = "Password" })

                            </div>
                            <div style="color: red">
                                @Html.ValidationMessageFor(x => x.Password)
                            </div>
                            <br />
                            <div>
                                <input class="btn btn-blue btn-block" id="login" type="submit" value="Login" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>