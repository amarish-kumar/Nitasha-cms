@model NITASA.Data.User
@{
    ViewBag.Title = "Profile";
}
<div class="main-content">
    <div class="container-fluid padded">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                <button class="close" data-dismiss="alert" type="button">×</button>
                @TempData["Message"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error">
                <button class="close" data-dismiss="alert" type="button">×</button>
                @TempData["Error"]
            </div>
        }
        <div class="row-fluid">
            <div class="span12">
                <div class="box">
                    <div class="box-header">
                        <span class="title">Profile</span>
                    </div>
                    <div class="box-content">
                        <div class="padded">
                            @using (Html.BeginForm("Details", "Profile", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                            {
                                <div class="box-content">
                                    <div class="padded">
                                        <div class="form-horizontal fill-up">
                                            <div class="control-group">
                                                <label class="control-label" style="text-align: left;">@Html.LabelFor(x => x.ProfilePicURL)</label>
                                                <div class="controls">
                                                    <input type="file" name="ProfilePicURL" id="ProfilePicURL" /><br />
                                                    <img title="logo" src="@Model.ProfilePicURL" alt="" style="width:120px;height:120px;margin-top:5px;" />
                                                </div>
                                            </div>
                                            <div class="control-group">
                                                <label class="control-label" style="text-align: left;">@Html.LabelFor(x => x.FirstName)</label>
                                                <div class="controls">
                                                    @Html.TextBoxFor(x => x.FirstName)
                                                    <div style="color: red">
                                                        @Html.ValidationMessageFor(m => m.FirstName)
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="control-group">
                                                <label class="control-label" style="text-align: left;">@Html.LabelFor(x => x.LastName)</label>
                                                <div class="controls">
                                                    @Html.TextBoxFor(x => x.LastName)
                                                    <div style="color: red">
                                                        @Html.ValidationMessageFor(m => m.LastName)
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="control-group">
                                                <input type="submit" value="Update Profile" class="btn btn-blue" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
