@{
    ViewBag.Title = "Change Password";
}
<div class="main-content">
    <div class="container-fluid padded">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                <button class="close" data-dismiss="alert" type="button">×</button>
                @TempData["Message"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error">
                <button class="close" data-dismiss="alert" type="button">×</button>
                @TempData["Error"]
            </div>
        }
        <div class="row-fluid">
            <div class="span12">
                <div class="box">
                    <div class="box-header">
                        <span class="title">Change Password</span>
                    </div>
                    <div class="box-content">
                        <div class="padded">
                            @using (Html.BeginForm("ChangePassword", "Authentication", FormMethod.Post))
                            {
                                <div class="box-content">
                                    <div class="padded">
                                        <div class="form-horizontal fill-up">
                                            <div class="control-group">
                                                <label class="control-label" style="text-align: left;">Current Password</label>
                                                <div class="controls">
                                                    @Html.Password("currentpassword")
                                                </div>
                                            </div>
                                            <div class="control-group">
                                                <label class="control-label" style="text-align: left;">New Password</label>
                                                <div class="controls">
                                                    @Html.Password("newpassword")
                                                </div>
                                            </div>
                                            <div class="control-group">
                                                <label class="control-label" style="text-align: left;">Confirm Password</label>
                                                <div class="controls">
                                                    @Html.Password("confirmpassword")
                                                </div>
                                            </div>
                                            <div class="control-group">
                                                <input type="submit" value="Change Password" class="btn btn-blue" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

