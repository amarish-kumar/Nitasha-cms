@using NITASA.Data
@{
    ViewBag.Title = "Backup List";

    List<string> BackupList = Directory.GetFiles(Server.MapPath(System.Configuration.ConfigurationManager.AppSettings["backupDir"]), "*.zip").ToList();
    
    WebGrid grid = new WebGrid(BackupList, rowsPerPage: 10, canSort: true);
}
<style>
    tfoot td {
        line-height: 3 !important;
    }

    .custom-pagination td {
        padding-left: 10px !important;
    }

    .table-normal tbody td.col1 {
        width: 150px;
        text-align: center;
    }
</style>
<div class="main-content">
    <div class="container-fluid padded">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <button class="close" data-dismiss="alert" type="button">×</button>
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-error">
                <button class="close" data-dismiss="alert" type="button">×</button>
                @TempData["ErrorMessage"]
            </div>
        }
        <div class="row-fluid">
            <div class="span4">
                <div class="box">
                    <div class="box-header">
                        <span class="title" id="catTitle">Take Database Backup</span>
                    </div>
                    <div class="box-content">
                        <div class="padded">
                            @using (Html.BeginForm("Add", "BackupRestore", FormMethod.Post))
                            {
                                
                                <div class="control-group">
                                    <label class="control-label" style="text-align: left;"></label>
                                    <div class="controls">
                                        <input type="submit" value="Backup Now" class="btn btn-blue" />
                                        @*<input type="button" value="Clear" class="btn btn-blue" />
                                        <input type="hidden" value="" id="CGUID" name="CGUID" />*@
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="span6" style="width:65%">
               
                <div class="box">
                    @*<div class="box-header">
                        <span class="title">Browse Backup Set</span>
                    </div>*@
                    <div class="box-content">
                        @if (BackupList.Count() > 0)
                        {
                            @grid.GetHtml(tableStyle: "table table-normal", headerStyle: "head", alternatingRowStyle: "alt",
                                firstText: "First", nextText: "Next", previousText: "Prev", lastText: "Last", footerStyle: "custom-pagination",
                                mode: WebGridPagerModes.All, columns: grid.Columns(
                                             grid.Column(columnName: "Name", header: "Backup Name", style: "col0",
                                            format: @<text>
                                                        @{ string fileName = new FileInfo(Convert.ToString(item)).Name; }
                                                        <span class="catName">@fileName</span>
                                                    </text>
                                        ),
                                        grid.Column( header: "Backup On", style: "col0",
                                            format: @<text>
                                                <span class="catName"> @File.GetCreationTime(Convert.ToString(item))</span>
                                            </text>
                                        ),
                                        grid.Column(header: "Action", style: "col1", format: @<text>
                                             @{
                                                string fileName1 = new FileInfo(Convert.ToString(item)).Name;
                                                }
                                                <a href="~/backup/script/@fileName1" class="btn btn-small btn-red delete-cat">Download</a>
                                                    @Html.ActionLink("Delete", "Delete", "BackupRestore", new { guid = fileName1.Replace(".zip","") }, new { @class = "btn btn-small btn-red delete-cat" })
                                        </text>
                                                                                          )
                                                                                  )
                                                                              )
                        }
                        else
                        {
                            <div class="padded">No Backup set created yet, create the first backup now.</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modal-confirm" class="modal hide fade" style="width: 370px;">
    <div class="modal-header">
        <a class="close modal_Delete_icon_link" data-dismiss="modal" href="">
            <i class="icon-remove-sign modal_close_icon_fontsize"></i>
        </a>
        <h6 id="H1">Confirmation</h6>
    </div>
    <div class="modal-body">
        <table class="width100per">
            <tr>
                <td id="delete-msg">
                    Are you sure you want to delete this caetgory ?
                </td>
            </tr>
            <tr>
                <td align="right">
                    @Html.ActionLink("Delete", "Delete", "Category", new { id = "dltCat", @class = "btn btn-red" })
                </td>
            </tr>
        </table>
    </div>
</div>

