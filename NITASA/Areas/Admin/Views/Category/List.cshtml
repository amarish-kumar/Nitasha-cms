@model Category
@using NITASA.Data
@{
    ViewBag.Title = "Category List";
    
    List<Category> CategoryList = ViewBag.CategoryList;
    WebGrid grid = new WebGrid(CategoryList, rowsPerPage: 10, canSort: true);
}
<style>
    tfoot td {
        line-height: 3 !important;
    }

    .custom-pagination td {
        padding-left: 10px !important;
    }

    .table-normal tbody td.col1 {
        width: 150px;
        text-align: center;
    }
</style>
<div class="main-content">
    <div class="container-fluid padded">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <button class="close" data-dismiss="alert" type="button">×</button>
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-error">
                <button class="close" data-dismiss="alert" type="button">×</button>
                @TempData["ErrorMessage"]
            </div>
        }
        <div class="row-fluid">
            <div class="span4">
                <div class="box">
                    <div class="box-header">
                        <span class="title" id="catTitle">Add New Category</span>
                    </div>
                    <div class="box-content">
                        <div class="padded">
                            @using (Html.BeginForm("Add", "Category", FormMethod.Post))
                            {
                                <div class="control-group">
                                    <label class="control-label" style="text-align: left;">
                                        Category Name
                                    </label>
                                    <div class="controls">
                                        @Html.TextBoxFor(m => m.Name, new { style = "width:90%" })
                                        <div style="color: red">
                                            @Html.ValidationMessageFor(m => m.Name)
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" style="text-align: left;">
                                        Category Slug
                                    </label>
                                    <div class="controls">
                                        @Html.TextBoxFor(m => m.Slug, new { style = "width:90%" })
                                        <div style="color: red">
                                            @Html.ValidationMessageFor(m => m.Slug)
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" style="text-align: left;">
                                        Category Description
                                    </label>
                                    <div class="controls">
                                        @Html.TextAreaFor(m => m.Description, new { style = "width:90%" })
                                        <div style="color: red">
                                            @Html.ValidationMessageFor(m => m.Description)
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" style="text-align: left;"></label>
                                    <div class="controls">
                                        <input type="submit" value="Save" id="addCat" class="btn btn-blue" />
                                        <input type="button" value="Clear" id="ClearCat" class="btn btn-blue" />
                                        <input type="hidden" value="" id="CGUID" name="CGUID" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="span6" style="width:65%">
                @using (Html.BeginForm("List", "Category", FormMethod.Get))
                {
                    <div class="box">
                        <div class="box-header">
                            <span class="title">Search Category</span>
                        </div>
                        <div class="box-content">
                            <div class="padded">
                                <table class="form-horizontal fill-up validatable width100per">
                                    <tr>
                                        <td class="width10per">Category</td>
                                        <td class="width70per">
                                            <input type="text" id="SearchCategory" name="SearchCategory" class="width100per" placeholder="Category Name" />
                                        </td>
                                        <td class="width20per">
                                            <input type="submit" class="btn btn-blue" value="Search" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                <div class="box">
                    <div class="box-header">
                        <span class="title">Browse Category</span>
                    </div>
                    <div class="box-content">
                        @if (CategoryList.Count() > 0)
                        {
                            @grid.GetHtml(tableStyle: "table table-normal", headerStyle: "head", alternatingRowStyle: "alt",
                                firstText: "First", nextText: "Next", previousText: "Prev", lastText: "Last", footerStyle: "custom-pagination",
                                mode: WebGridPagerModes.All, columns: grid.Columns(
                                             grid.Column(columnName: "Name", header: "Category Name", style: "col0",
                                            format: @<text>
                                            <span class="catName">@item.Name</span>
                                            <input type="hidden" class="catSlug" value="@item.Slug" />
                                            <input type="hidden" class="catDesc" value="@item.Description" />
                                            </text>
                                        ),
                                        grid.Column(header: "Action", style: "col1", format: @<text>
                                            @Html.ActionLink("Edit", null, null, new { id = @item.GUID, @class = "btn btn-small btn-blue edit-cat" })
                                            @Html.ActionLink("Delete", null, null, null, new { GUID = item.GUID, @class = "btn btn-small btn-red delete-cat" }) @*onclick = "return confirm('Are you sure to delete this Category ?');" *@
                                        </text>
                                                                 )
                                                         )
                                                     )
                        }
                        else
                        {
                            <div class="padded">No Category Found.</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modal-confirm" class="modal hide fade" style="width: 370px;">
    <div class="modal-header">
        <a class="close modal_Delete_icon_link" data-dismiss="modal" href="">
            <i class="icon-remove-sign modal_close_icon_fontsize"></i>
        </a>
        <h6 id="H1">Confirmation</h6>
    </div>
    <div class="modal-body">
        <table class="width100per">
            <tr>
                <td id="delete-msg">
                    Are you sure you want to delete this caetgory ?
                </td>
            </tr>
            <tr>
                <td align="right">
                    @Html.ActionLink("Delete", "Delete", "Category", new { id = "dltCat", @class = "btn btn-red" })
                </td>
            </tr>
        </table>
    </div>
</div>

<script type="text/javascript">
    $("#ClearCat").click(function () {
        $("#CGUID").val("");
        $("#catTitle").html('Add New Category');
        $("#Name").val("");
        $("#Slug").val("");
        $("#Description").val("");
    });
    $(".edit-cat").click(function () {
        var catName = $(this).parent().parent().find(".catName").html();
        var catSlug = $(this).parent().parent().find(".catSlug").val();
        var catDesc = $(this).parent().parent().find(".catDesc").val();
        $("#Name").val(catName);
        $("#Slug").val(catSlug);
        $("#Description").val(catDesc);
        $("#CGUID").val($(this).attr("id"));
        $("#catTitle").html('Update Category');
        return false;
    });
    $(".delete-cat").click(function () {
        var GUID = $(this).attr("GUID");
        $.ajax({
            type: "POST",
            url: '/Admin/Category/PostCount',
            data: { GUID: GUID },
            dataType: "json",
            success: function (data) {
                if (parseInt(data) > 0)
                    $("#delete-msg").html("Category contains " + data + " post, </br>Are you sure you want to delete this caetgory ?");
                else
                    $("#delete-msg").html("Are you sure you want to delete this caetgory ?");
                $("#dltCat").attr("href", "/Admin/Category/Delete/" + GUID);
                $("#modal-confirm").modal('show');
            }
        });
        return false;
    });
</script>
