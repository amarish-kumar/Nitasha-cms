<div class="art-box art-block">
    <div class="art-box-body art-block-body">
        <div class="art-bar art-blockheader">
            <h3 class="t">Search</h3>
        </div>
        <div class="art-box art-blockcontent">
            <div class="art-box-body art-blockcontent-body">
                <div class="widget-content">
                    <div id="CustomSearch1_form">
                        
@using (Html.BeginForm("Results", "Search", FormMethod.Post, new { id = "frmsearch",@class="gsc-search-box" }))
    {
                            <table cellspacing="0" cellpadding="0" class="gsc-search-box">
                                <tr>
                                    <td class="gsc-input">
                                        <input type="text" size="10" class="gsc-input" id="SearchText" name="SearchText" title="Search" />
                                    </td>
                                    <td class="gsc-search-button">
                                        <input type="button" value="Search" class="gsc-search-button" id="submit-search" title="Search" />
                                    </td>
                                </tr>
                            </table>

}
                    </div>
                </div>
                <div class="cleared"></div>
            </div>
        </div>
        <div class="cleared"></div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#submit-search").click(function (evt) {
            if ($("#SearchText").val().trim() != '')
                $("#frmsearch").submit();
            else
                alert("Please enter text to search");
            return false;
        });
    });
</script>