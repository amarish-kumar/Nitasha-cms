@model string
@using NITASA.ViewModels
@{
    CL_WidgetOption wOption = NITASA.Helpers.Functions.ParseJson<CL_WidgetOption>(Model);
    List<CL_Category> Categories = NITASA.Helpers.Functions.GetCategories(wOption.Count);
}

@if (Categories.Count() > 0)
{
    <div class="art-box art-vmenublock">
        <div class="art-bar art-blockheader">
            <h3 class="t">@wOption.Title</h3>
        </div>
        <div class="art-box-body art-vmenublock-body">
            <div class="art-box art-vmenublockcontent">
                <div class="art-box-body art-vmenublockcontent-body">
                    <ul class="art-vmenu">
                        @foreach (var item in Categories)
                        {
                            <li>
                                <a href="@(string.IsNullOrEmpty(item.URL) ? "#" : "/Category/" + item.URL)" >@item.Name</a>
                            </li>
                        }            
                    </ul>
                    <div class="cleared"></div>
                </div>
            </div>
            <div class="cleared"></div>
        </div>
    </div>
}