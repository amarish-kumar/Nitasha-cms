@{
    List<NITASA.ViewModels.CL_Content> pages = NITASA.Helpers.Functions.GetPages(5);
}
<div class="art-footer">
    <div class="art-footer-body">
        <div class="art-footer-center">
            <div class="art-footer-wrapper">
                <div class="art-footer-text">
                    <p>
                        @foreach (var item in pages)
                        {
                            var lastPage = pages.Last();
                            if (item == lastPage)
                            {
                                <a href="@(string.IsNullOrEmpty(item.URL) ? "#" : "/Content/" + item.URL)">@item.Title</a> 
                            }
                            else
                            {
                                <a href="@(string.IsNullOrEmpty(item.URL) ? "#" : "/Content/" + item.URL)">@item.Title</a>  <text>| </text>
                            }
                            
                        }
                   
                    </p><p>Copyright 2015. All Rights Reserved.</p>
                    <div class="cleared"></div>

                </div>
            </div>
        </div>
        <div class="cleared"></div>
    </div>
</div>