@using NITASA.Helpers
@{
    string currentTheme= ViewBag.ActiveTheme; 
}
<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <!-- Set the viewport width to device width for mobile -->
    <meta name="viewport" content="width=device-width" />
    @Html.Raw(Functions.GetMetaData(Request))
    <title>@ViewBag.Title :: @Functions.GetSiteName()</title>
    <!-- CSS Files-->
    <link rel="stylesheet" href="@currentTheme/css/style.css">
    <link rel="stylesheet" href="@currentTheme/css/skins/orange.css">
    <!-- skin color -->
    <link rel="stylesheet" href="@currentTheme/css/responsive.css">
    <!-- IE Fix for HTML5 Tags -->
    <!--[if lt IE 9]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
      <![endif]-->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    @Html.Raw(Functions.GetFaviconURL())
    @Html.Raw(Functions.GetHeaderCustomCode())
    @Html.Raw(Functions.GetCustomCSS())
    @RenderSection("PageLevelStyles",false)
</head>
<body>
    <div id="panel">
        <div class="row">
            <div class="twelve columns">
                <img src="@currentTheme/images/info.png" class="pics" alt="info">
                <div class="infotext">
                    Welcome to the NITASA opensource CMS for .Net
                </div>
            </div>
        </div>
    </div>
    <p class="slide">
        <a href="#" class="btn-slide"></a>
    </p>
    
    @Html.Partial("~" + currentTheme + "/header.cshtml")
        
    @RenderBody()    

    @Html.Partial("~" + currentTheme + "/footer.cshtml")    

    <script src="@currentTheme/js/foundation.min.js"></script>
    <script src="@currentTheme/js/jquery.easing.1.3.js"></script>
    <script src="@currentTheme/js/elasticslideshow.js"></script>
    <script src="@currentTheme/js/jquery.carouFredSel-6.0.5-packed.js"></script>
    <script src="@currentTheme/js/jquery.cycle.js"></script>
    <script src="@currentTheme/js/app.js"></script>
    <script src="@currentTheme/js/modernizr.foundation.js"></script>
    <script src="@currentTheme/js/slidepanel.js"></script>
    <script src="@currentTheme/js/scrolltotop.js"></script>
    <script src="@currentTheme/js/hoverIntent.js"></script>
    <script src="@currentTheme/js/superfish.js"></script>
    <script src="@currentTheme/js/responsivemenu.js"></script>
    @RenderSection("PageLevelScripts", false)
    @Html.Raw(Functions.GetCustomJavaScript())
    @Html.Raw(Functions.GetGoogleAnalytics())
</body>
</html>