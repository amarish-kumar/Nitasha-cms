@model List<NITASA.ViewModels.CL_Slide>
 
    @if (Model.Count()>0)
    { 
    <div id="ei-slider" class="ei-slider">
        <ul class="ei-slider-large">
            @foreach (var item in Model)
            {
                <li>
                    <img src="@item.Image" alt="image01" class="responsiveslide" />
                    <div class="ei-title">
                        <h2>Dare to</h2>
                        <h3>Dream</h3>
                    </div>
                </li>
            }
        </ul>
        <ul class="ei-slider-thumbs">
            <li class="ei-slider-element">Current</li>
            @foreach (var item in Model.Skip(1))
            {
                <li><a href="#">@item.Title</a><img src="@item.Image" class="slideshowthumb" alt="thumb01" style="width:150px;height:59px;"/></li>
            }
        </ul>
    </div>
    <div class="minipause">
    </div>
    }