@model NITASA.ViewModels.Register
@{
    ViewBag.Title = "Register yourself";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @using (Html.BeginForm("Users", "Register", FormMethod.Post))
    {
        <div class="row block01">
            <div class="col-full">
                <div class="wrap-col">
                    <p>Below you should enter your admin login details. You can manage whole site content using this email address and password.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-full">
                <label id="lblMessage" class="red padleft100" runat="server">@(TempData["message"] != null ? Convert.ToString(TempData["message"]) : "")</label>
            </div>
        </div>
        <div class="row block02">
            <div class="col-1-5">
                <div class="wrap-col pull-right"> @Html.LabelFor(x => x.UserEmail) </div>
            </div>
            <div class="col-1-5">
                <div class="wrap-col"> @Html.TextBoxFor(m => m.UserEmail)<br />@Html.ValidationMessageFor(x => x.UserEmail) </div>
            </div>
            <div class="col-1-3">
                <div class="wrap-col pull-left"> Email address to access the admin section  </div>
            </div>
        </div>
        <div class="row block02">
            <div class="col-1-5">
                <div class="wrap-col pull-right">  @Html.LabelFor(x => x.Password) </div>
            </div>
            <div class="col-1-5">
                <div class="wrap-col"> @Html.PasswordFor(m => m.Password)<br />@Html.ValidationMessageFor(x => x.Password)</div>
            </div>
            <div class="col-1-3">
                <div class="wrap-col pull-left"> Password to access the admin section </div>
            </div>
        </div>
        <div class="row block02">
            <div class="col-1-5">
                <div class="wrap-col pull-right"> @Html.LabelFor(x => x.ConfirmPassword) </div>
            </div>
            <div class="col-1-5">
                <div class="wrap-col"> @Html.PasswordFor(m => m.ConfirmPassword)<br />@Html.ValidationMessageFor(x => x.ConfirmPassword) </div>
            </div>
            <div class="col-1-3">
                <div class="wrap-col pull-left"> Same as password</div>
            </div>
        </div>
        <div class="row block02">
            <div class="col-1-5">
                <div class="wrap-col"> </div>
            </div>
            <div class="col-1-5">
                <div class="wrap-col"><input type="submit" class="button" value="Submit" />  </div>
            </div>
            <div class="col-1-3">
                <div class="wrap-col"> </div>
            </div>
        </div>

    }
</div>